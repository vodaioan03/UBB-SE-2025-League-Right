<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Duo.Views.Pages.CreateQuizPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Duo.Views.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:Duo.ViewModels"
    xmlns:local1="using:Duo.Models.Exercises"
    mc:Ignorable="d">

    <Page.DataContext>
        <viewmodels:CreateQuizViewModel x:Name="ViewModel"/>
    </Page.DataContext>

    <Page.Resources>

        <!-- Template for exercise selection dialog -->
        <DataTemplate x:Key="ExerciseSelectionItemTemplate">
            <StackPanel Orientation="Horizontal"
                    Spacing="8">
                <TextBlock Text="Exercise #"/>
                <TextBlock Text="{Binding Id}"/>
                <TextBlock Text=" - "/>
                <TextBlock Text="{Binding Question}"/>
            </StackPanel>
        </DataTemplate>
    </Page.Resources>

        <!-- Modal content -->
        <Grid
          Padding="24">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Text="Create New Quiz"
                   Style="{ThemeResource TitleLargeTextBlockStyle}"
                   Margin="0,0,0,16"/>

            <!-- Content -->
        <StackPanel Grid.Row="1"
                    Spacing="16">

            <!-- Exercise Management -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Selected Exercises"
                           Style="{ThemeResource SubtitleTextBlockStyle}"
                           VerticalAlignment="Center"/>

                    <Button Grid.Column="1"
                        Content="Add Exercise"
                        Style="{ThemeResource AccentButtonStyle}"
                        Command="{Binding OpenSelectExercisesCommand}"/>
                </Grid>

            <ListView x:Name="ExerciseList"
                      Height="200"
                      ItemsSource="{Binding SelectedExercises, Mode=TwoWay}"
                      BorderThickness="1"
                      BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                      Padding="8">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local1:Exercise">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal"
                                Spacing="8">
                            <TextBlock Text="Exercise #"/>
                            <TextBlock Text="{Binding Id}"/>
                            <TextBlock Text=" - "/>
                            <TextBlock Text="{Binding Question}"/>
                        </StackPanel>
                            <Button Grid.Column="1"
                            Content="Remove"
                            Command="{x:Bind ViewModel.RemoveExerciseCommand}"
                            CommandParameter="{Binding}"
                            Style="{ThemeResource TextBlockButtonStyle}"/>
                    </Grid>
                </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Spacing="8"
                    Margin="0,24,0,0">
                <Button x:Name="CancelButton"
                    Content="Cancel"
                    Click="CancelButton_Click"/>
                <Button x:Name="SaveButton"
                    Content="Save"
                    Style="{ThemeResource AccentButtonStyle}"
                    Command="{Binding SaveButtonCommand}"/>
            </StackPanel>
        </Grid>
</Page>
